m is that a given Bell inequality can be\n\nwritten in many equivalent ways using the normalization\n\nconditions 1\u00b7p=/summationtext\n\nabxyp(ab", "embedding": [0.014212658, -0.015381342, 0.016526498, -0.020023266, -0.034899376, -0.02748661, -0.015599014, -0.01294326, -0.04878711, 0.06467514, 0.069179185, 0.006284648, 6.826051e-05, -0.028920261, -0.030682122, 0.0068291514, -0.02960949, 0.0017440766, -0.041610144, 0.023034083, 0.02743628, -0.0042015053, -0.07586436, 0.018026797, -0.029513624, 0.015056337, 0.022327818, 0.013722586, 0.05946911, 0.06659084, 0.057459787, -0.0065408107, 0.018080302, 0.0012587492, -0.010109541, -0.007386254, 0.022849258, -0.002945698, 0.027675198, -0.033135224, 0.03930785, 0.021030603, 0.02296456, -0.06922461, -0.02608866, 0.0050261067, -0.0036460073, 0.004765119, -0.01549763, -0.0724659, -0.041766167, -0.026529029, 0.056846403, 0.022686528, -0.004366187, -0.00524569, 0.0052700234, 0.020230588, -0.013992575, 0.027665487, 0.0026142919, 0.008742804, 0.016174162, -0.07221376, 0.040600266, 0.023223326, -0.020086544, -0.0019958776, -0.0033950438, -0.046514295, 0.0018298199, -0.031766962, -0.010521732, -0.03090733, -0.03142152, 0.018956408, -0.027429806, -0.01151564, -0.036593463, 0.0032044214, 0.010836846, -0.026455428, -0.024102435, -0.005657188, -0.013816081, 0.0045448616, 0.009735914, -0.026291307, 0.017193262, -0.018732283, 0.02988563, 0.047610298, 0.0015465278, 0.027476275, 0.07172406, 0.015603851, 0.031962365, 0.009705119, 0.036705725, 0.0136365965, 0.013494728, 0.055707853, 0.028611345, 0.07605278, -0.020859633, 0.049199916, -0.00069981464, 0.050057735, -0.0046680653, -0.04127736, -0.021864567, 0.015022097, 0.026441427, 0.04853036, 0.030320032, 0.027475657, -0.029915832, -0.0011875128, -0.060702536, -0.017489178, 0.0070378664, 0.016938737, 0.065289125, 0.025815446, 0.006160348, -0.0028998884, 0.03312044, -0.018502573, -0.046031624, -0.009033851, 0.02731009, 0.012759571, -0.016078165, 0.024684673, -0.04929332, -0.0025814306, -0.01444