d string theory require all partons to be\n\nwee.", "embedding": [0.024850333, 0.002615584, 0.04197737, -0.00035158987, -0.008230082, -0.0057549514, -0.005119692, -0.017464442, -0.036115132, 0.10952249, 0.0064483336, -0.009453347, -0.002071241, -0.03973514, -0.004201404, 0.03408723, -0.0028815009, -0.038535047, -0.066540994, 0.045923375, 0.0156952, -0.010013639, -0.082057714, -0.019782621, -0.015996559, 0.028912377, 0.022415357, 0.023315769, 0.026647959, 0.07041334, 0.038847703, 0.00808623, -0.009184472, -0.039843276, -0.015723681, 0.0083164135, 0.005554319, -0.046715222, 0.05664826, -0.019867862, 0.04015481, -0.017701464, 0.041199744, -0.012368739, -0.010936242, -0.005561037, 0.00855839, -0.016276907, -0.01668824, -0.060288142, -0.0032363583, -0.020038094, 0.029919319, -0.04760027, -0.027539931, -0.012304389, 0.020353764, 0.006456748, -0.009248853, 0.0102865985, 0.025580803, 0.011248295, 0.010385535, -0.028074464, 0.009812034, 0.079317495, -0.033076078, 0.0435114, -0.015664417, -0.041099325, -0.013742333, 0.007897914, -0.009172342, -0.0029433593, -0.025662314, 0.021089178, -0.020338885, -0.014312821, -0.021270283, 0.015370195, 0.005614396, -0.0004997621, -0.002194652, 0.016272552, -0.014174564, -0.032674458, -0.0060318606, -0.0009899851, 0.04936886, -0.01538917, -0.008712877, 0.013135942, -0.03835172, -0.010455998, 0.011602306, 0.021171886, -0.02602958, 0.039064903, -0.00903826, 0.008328956, -0.012317006, 0.051761895, -0.048353903, 0.0012658585, -0.058418147, 0.07189639, -0.006706886, 0.018637152, -0.0026030014, -0.06807038, 0.011130976, -0.0074850735, 0.028511668, 0.03501331, 0.016346078, 0.052077677, -0.014767207, 0.0074442523, -0.005422817, -0.027198846, 0.0231652, 0.009377443, 0.018687805, 0.038244534, 0.004858726, -0.005968744, 0.031466495, 0.022061266, -0.056752276, 0.011585792, 0.048069015, -0.04855126, -0.012130138, 0.026062332, 0.019076357, 0.014316284, 0.02398036, 0.0033513072, -0.0062289382, -0.03522725, 0.014692402, -0.008191381, 0.03205603, 0.053821705